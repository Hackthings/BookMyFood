#offCanvasLeft.off-canvas.position-left{'data-off-canvas': '', 'data-transition': 'overlap'}
  .card
    .card-image
      = image_tag Rails.env.development? || current_user.image_url.blank? ? 'logo.png' : current_user.image_url
    - [current_user.name, current_user.email, current_user.gender, current_user.locale, current_user.currency].compact.each do |value|
      .card-section
        = value
  = render 'layouts/menus', vertical: true