%h1
  Foods
  = link_to 'Add New Food', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_food_path}

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th Name
        %th Price
        %th Image
        %th Available
        %th Actions

    %tbody
      - @foods.each do |food|
        %tr
          %td= food.id
          %td= food.name
          %td= food.price
          %td= image_tag(food.image) 
          %td= food.available
          %td
            .button-group
              = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: food_path(food)}
              = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_food_path(food)}
              = link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure you want to delete this Food?' }, class: 'button alert'
