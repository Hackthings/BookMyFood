= form_with(model: object, remote: true) do |f|
  - if object.errors.any?
    #error_explanation
      %p= "#{pluralize(object.errors.count, "error")} prohibited this Order Item from being saved:"
      %ul
        - object.errors.full_messages.each do |message|
          %li= message
  .row
    = f.label :order_id
    = f.collection_select :order_id, Order.all, :id, :id
  .row
    = f.label :product_id
    = f.collection_select :product_id, Product.all, :id, :name
  .row
    = f.label :quantity
    = f.number_field :quantity
  = render 'shared/timestamps', f: f # TODO: Add this partial to generator
  = render 'shared/reveal_footer', f: f # TODO: Add this partial to generator